{
  "name": "sistema-academico-frontend",
  "type": "docker",
  "buildContext": ".",
  "dockerfile": "Dockerfile",
  "port": 80,
  "healthcheck": {
    "path": "/",
    "port": 80,
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  },
  "environment": [
    {
      "key": "REACT_APP_API_URL",
      "value": "https://sistema-academico-api.dokploy.com/api"
    },
    {
      "key": "NODE_ENV",
      "value": "production"
    }
  ],
  "domains": [
    {
      "domain": "sistema-academico.dokploy.com",
      "path": "/",
      "port": 80
    }
  ],
  "buildArgs": [
    {
      "key": "REACT_APP_API_URL",
      "value": "https://sistema-academico-api.dokploy.com/api"
    }
  ]
}
